SRC = 	tests/folder/test2.c \
	tests/folder/test1.c \
	tests/test2.c \
	tests/test1.c \

CC = gcc
CFLAGS = -W -Wall -Wextra
NAME = ./tmp/criterion_compiled_sources
OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re

%.o: %.c
	$(CC) -o $@ -c $< $(CFLAGS)
